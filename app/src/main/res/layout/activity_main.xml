<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintRight_toRightOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     android:id="@+id/text"
     android:text="Custom Buttoms"
     android:textColor="@color/black"
     android:textSize="28sp"
     android:textAlignment="center"
     android:fontFamily="serif"
     android:layout_marginTop="32dp"

     />



   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/b1"
       android:layout_width="200dp"
       android:layout_height="56dp"
       app:layout_constraintTop_toBottomOf="@id/text"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:layout_marginTop="56dp"
       android:text="Click Me"
       android:translationZ="20dp"
       android:textAllCaps="false"
       android:textSize="20sp"
       android:textColor="@color/black"
       android:background="@drawable/first"

       />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b2"
        android:layout_width="200dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/b1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        android:text="Click Me"
        android:translationZ="20dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/second_button"

        />



 <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/b2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/b4"
        app:lottie_rawRes="@raw/button"
        android:id="@+id/lottieBtn"
        android:translationZ="100dp"
        android:layout_marginTop="56dp"

        android:scaleType="fitXY"


        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b4"
        android:layout_width="200dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/lottieBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        android:text="Click Me"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/forth"
        android:translationZ="20dp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/b5"
        android:layout_width="200dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@id/b4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        android:text="Click Me"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/fifth_button"
        android:translationZ="60dp"


        />
 <ProgressBar
     android:id="@+id/p"
     android:layout_width="40dp"
     android:layout_height="40dp"
     app:layout_constraintTop_toTopOf="@id/b5"
     app:layout_constraintLeft_toLeftOf="@id/b5"
     app:layout_constraintRight_toRightOf="@id/b5"
     app:layout_constraintBottom_toBottomOf="@id/b5"
     android:visibility="invisible"
     android:translationZ="10dp"
     android:indeterminateTint="@color/white"


     />


</androidx.constraintlayout.widget.ConstraintLayout>